{
  "expo": {
    "name": "Your Story",
    "slug": "your-story", // 👈 αυτό να ταιριάζει με το Project ID
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.gzorbi.yourstory",
      "versionCode": 1
    },
    "extra": {
      "eas": {
        "projectId": "your-story"
      }
    },
    "owner": "gzorbi",
    "cli": {
      "appVersionSource": "remote"
    },
    "sdkVersion": "50.0.0",
    "platforms": ["ios", "android"]
  }
}
